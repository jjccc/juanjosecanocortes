<!-- Contact Section -->
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Contacta conmigo</h2>
                <h3 class="section-subheading contact-font">Explica lo más detalladamente posible cual es tu necesidad o deja tu teléfono o tu correo y me pondré en contacto contigo lo antes posible.</h3>
                <h3 class="section-subheading contact-font">También puedes escribirme directamente a jjcanocortes@gmail.com</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <%= form_for @contact do |f| %>
                    <%= f.hidden_field :captcha_response %>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <%= f.text_field :name, :class => "form-control", :placeholder => "Tu nombre *", :required => true, :data => { :'validation-required-message' => "Por favor, introduce tu nombre."} %>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <%= f.text_field :email, :class => "form-control", :placeholder => "Tu correo *", :required => true, :data => { :'validation-required-message' => "Por favor, introduce tu dirección de correo."} %>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <%= f.text_field :phone, :class => "form-control", :placeholder => "Tu teléfono *", :required => true, :data => { :'validation-required-message' => "Por favor, introduce tu teléfono."} %>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <%= f.text_area :message, :class => "form-control", :placeholder => "Tu mensaje *", :required => true, :data => { :'validation-required-message' => "Por favor, introduce tu mensaje."} %>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                          <%= recaptcha_tags(script: false) %>
                        </div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button type="submit" class="btn btn-xl" id="submit-button">Enviar mensaje</button>
                        </div>
                    </div>
                    
                <% end %>
            </div>
        </div>
    </div>
</section>


